<div class="navbar navbar-expand-sm navbar-light navbar-cambista">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand mx-5" do %>
      <%= image_tag "logo.png", class: "w-101 h-100" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Meus ingressos", "#", class: "dropdown-item" %>
              <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Registrar", new_user_registration_path, class: "btn btn-registrar-navbar mx-2" %>
          </li>
           <li class="nav-item">
            <%= link_to "Entrar", new_user_session_path, class: "btn btn-entrar-navbar" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
