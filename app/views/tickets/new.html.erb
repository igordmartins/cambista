<div class="container col-md-12 text-center mt-4">

  <h2>Venda seus ingressos na cambista</h2>

    <%= simple_form_for @ticket do |f| %>
      <div class="form-inputs mt-4 col-md-6 offset-md-3">
        <%= f.input :event_name, label: "Nome do evento" %>
        <%= f.input :event_price, label: "Preço" %>
        <%= f.input :description, label: "Descrição", as: :text, :input_html => { :cols => 5, :rows => 5 } %>
        <%= f.input :event_date, label: "Data" %>
          <div class="form-actions">
          <%= f.button :submit, 'Vender ingresso!', class: ' mt-3 btn-registrar-navbar' %>
          </div>
      </div>
    <% end %>
</div>
